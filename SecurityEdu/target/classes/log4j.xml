<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration
	xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console"
		class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	<appender name="download" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="/home/mis/hjit/logs/SecurityEdu.log"/>
        <param name="Append" value="true"/>
        <param name="dataPattern" value=".yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %-5p: %F:%L - %m%n" />
        </layout>
    </appender>

	<!-- Application Loggers -->
	<logger name="kr.co.hjit">
		<level value="debug" />
	</logger>

	<!-- 3rdparty Loggers -->
	
	<logger name="org.springframework.core">
		<level value="debug" />
	</logger>
 	
	<logger name="org.springframework.beans">
		<level value="debug" />
	</logger>

	<logger name="org.springframework.context">
		<level value="debug" />
	</logger>

	<logger name="org.springframework.web">
		<level value="debug" />
	</logger>
	
	<!-- SQL Logger -->
	<!-- SQL문과 해당 SQL을 실행시키는데 수행된 시간 정보(milliseconds) -->
	<logger name="jdbc.sqltiming" level="DEBUG" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="download" />
	</logger>
	<!-- SQL 쿼리 문장 -->
	<logger name="jdbc.sqlonly" level="DEBUG" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="download" />
	</logger>

	<!-- ResultSet을 제외한 모든 JDBC 호출 정보 -->
	<logger name="jdbc.audit" level="DEBUG" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="download" />
	</logger>

	<!-- ResultSet을 포함한 모든 JDBC 호출 정보 -->
	<logger name="jdbc.resultset" level="DEBUG" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="download" />
	</logger>

	<!-- SQL 결과 조회된 데이터의 table을 로그 -->
	<logger name="jdbc.resultsettable" level="DEBUG" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="download" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="download" />
	</root>

</log4j:configuration>
